<Window x:Class="FsWatcher.Graphics.WnWatch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FsWatcher" Width="600" Height="300" Loaded="Start" Closing="ClosingStop">
        <DockPanel>
                <DockPanel DockPanel.Dock="Top" Height="50" Background="WhiteSmoke">
                        <Image DockPanel.Dock="Left" Source="/Resources/Icon.ico" Width="30" Margin="10,10,0,10"/>
                        <Button DockPanel.Dock="Right" Content="Stop" Width="100" Margin="0,10,10,10" Click="Stop"/>
                        <Label Content="Watching..." Margin="10,10,10,5" FontSize="16"/>
                </DockPanel>
                <ListView x:Name="LvActivities" Margin="10,10,10,10">
                        <ListView.View>
                                <GridView>
                                        <GridViewColumn Header="Path" Width="300" DisplayMemberBinding="{Binding Path}"/>
                                        <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}"/>
                                        <GridViewColumn Header="Time" Width="150" DisplayMemberBinding="{Binding Time}"/>
                                </GridView>
                        </ListView.View>
                </ListView>
        </DockPanel>
</Window>