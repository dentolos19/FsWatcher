<mahApps:MetroWindow x:Class="FsWatcher.Graphics.WnWatch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
        Title="FsWatcher" Width="600" Height="300" Loaded="Start" Closing="Halt">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="50" Background="#FF444444">
            <Image DockPanel.Dock="Left" Margin="10,10,10,10" Source="/Resources/Logo.png" Width="30"/>
            <Button DockPanel.Dock="Right" Margin="10,10,10,10" Content="Stop" Width="75" Click="Stop"/>
            <Button x:Name="BnPause" DockPanel.Dock="Right" Margin="10,10,0,10" Content="Pause" Width="75" Click="Pause"/>
            <Label Margin="0,10,0,10" Content="FsWatcher" VerticalContentAlignment="Center"/>
        </DockPanel>
        <ListView x:Name="LvActivities">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Location" Width="200" DisplayMemberBinding="{Binding Location}"/>
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Time" Width="150" DisplayMemberBinding="{Binding Time}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</mahApps:MetroWindow>